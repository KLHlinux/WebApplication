@model WebApplication.Models.Teacher
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/signin.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h2 class="form-signin-heading">提案信息系统</h2>
            <div class="form-group">
                @Html.TextBoxFor(t => t.account, new { @class = "form-control", placeholder = "请输入账号" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(t => t.password, new { @class = "form-control", placeholder = "请输入密码" })
            </div>
            <div>
                @Html.RadioButton("administrators", "teacher",true) 教师
                @Html.RadioButton("administrators", "administrators" ) 系统管理员
                @Html.RadioButton("administrators", "department" ) 部门管理员
            </div>
            <br />
            <button type="submit" class="btn btn-lg btn-primary btn-block">登 录</button>
        }

    </div>
</body>
</html>
