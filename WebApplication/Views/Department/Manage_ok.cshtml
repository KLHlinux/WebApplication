@model IEnumerable<WebApplication.Models.Result>
@{
    ViewBag.Title= "已处理的提案";
    Layout = "~/Views/Shared/Department_Layout.cshtml";
}

<br />
<br />
<div class="row clearfix">
    <div class="col-md-12 column">
        <div style="padding-left:15px ; border:1px #c7dfe0 solid;">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th width="20" style="text-align:center">
                            编号
                        </th>
                        <th width="50" style="text-align:center">
                            提案类型
                        </th>
                        <th width="300" style="text-align:center">
                            提案标题
                        </th>
                        <th width="50" style="text-align:center">
                            提案人
                        </th>
                        <th width="50" style="text-align:center">
                            是否受理
                        </th>
                        <th width="200" style="text-align:center">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Execute.Proposal1.id)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Execute.Proposal1.Proposal_type.proposal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Execute.Proposal1.title)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Execute.Proposal1.Teacher.username)
                            </td>
                            <td style="text-align:center">
                                @if (item.acceptance == 1){
                                    @:是
                                }else {
                                    @:否
                                }
                            </td>
                            <td>
                                @Html.ActionLink("查看内容", "Content", new { id = item.proposal })
                                @if (item.acceptance == 1){
                                     @: | @Html.ActionLink("编写执行结果", "Write", new { proposal = item.proposal })
                                }else {
                                    @:
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
