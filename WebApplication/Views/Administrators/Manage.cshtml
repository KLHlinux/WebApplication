@model IEnumerable<WebApplication.Models.Execute>

@{
    ViewBag.Title = "审核提案";
    Layout = "~/Views/Shared/Administrators_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-md-12 column">
        <div style="padding-left:15px ; border:1px #c7dfe0 solid;">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th width="20" style="text-align:center">
                            提案ID
                        </th>
                        <th width="50" style="text-align:center">
                            提案人
                        </th>
                        <th width="300" style="text-align:center">
                            提案标题
                        </th>
                        <th width="50" style="text-align:center">
                            状态
                        </th>
                        <th width="200" style="text-align:center">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Proposal1.id)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Proposal1.Teacher.username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Proposal1.title)
                            </td>
                            <td style="text-align:center">
                                未处理
                            </td>
                            <td>
                                @Html.ActionLink("审核", "Edit", new { proposal = item.proposal })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>